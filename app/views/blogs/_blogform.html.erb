<div class="blog_form">
  <%= form_with(model:@blog, local:true) do |f| %>
    <% if @blog.errors.any? %>
      <% @blog.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= f.text_area :content %>
    <p class="btn"><%= f.submit "投稿" %></p>
  <% end %>
</div>
